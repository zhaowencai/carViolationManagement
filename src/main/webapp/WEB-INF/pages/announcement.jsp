    function announcement() {
        var form = $('#recordForm');
        form.attr("action", "/announcement");
        form.submit();
    }

    function announcementEdit() {
        var form = $('#recordForm');
        var announcementID = $(event.currentTarget).attr("name");
        form.find("#ID").val(announcementID);
        form.attr("action", "/announcement_edit");
        form.submit();
    }

    function delAnnouncement(event) {
        var form = $('#recordForm');
        var ID = $(event.currentTarget).attr("name");
        form.find("#ID").val(ID);
        form.attr("action", "/announcement_del");
        form.submit();
    }

    function goHome() {
        var form = $('#recordForm');
        form.attr("action", "/home");
        form.submit();
    }

    function logout() {
        var form = $('#recordForm');
        form.attr("action", "/");
        form.submit();
